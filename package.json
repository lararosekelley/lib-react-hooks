{
  "name": "lib-react-hooks",
  "private": false,
  "version": "0.1.0",
  "description": "General purpose React hooks library",
  "keywords": [
    "react",
    "reactjs",
    "hooks",
    "react-hooks",
    "promises",
    "async"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "jsnext:main": "dist/index.es.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/tylucaskelley/lib-react-hooks"
  },
  "author": "Ty-Lucas Kelley <tylucaskelley@gmail.com> (https://tylucaskelley.com)",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist node_modules yarn.lock",
    "postclean": "yarn install",
    "prebuild": "rm -rf dist",
    "build": "rollup --config",
    "postbuild": "yarn docs:build",
    "lint": "eslint --ignore-path .gitignore --ext .js,.jsx,.ts,.tsx src",
    "test": "jest",
    "test:coverage": "jest --coverage && cat coverage/lcov.info | coveralls",
    "docs:serve": "docz dev",
    "docs:build": "docz build",
    "prepublishOnly": "yarn test && yarn build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [ "/node_modules/", "/.docz/" ]
  },
  "dependencies": {
    "react": "^16.9.0",
    "react-dom": "^16.9.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@greylocklabs/eslint-config": "3.1.0",
    "@testing-library/react-hooks": "^2.0.1",
    "@types/jest": "^24.0.18",
    "@types/react": "^16.9.2",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "@vue/eslint-config-typescript": "^4.0.0",
    "babel-jest": "^24.9.0",
    "coveralls": "^3.0.6",
    "docz": "^2.0.0-rc.31",
    "eslint": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.16.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-vue": "^5.2.3",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "react-test-renderer": "^16.9.0",
    "rollup": "^1.20.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-typescript2": "^0.24.0",
    "shelljs": "0.8.5",
    "ts-jest": "^24.0.2",
    "tslib": "^1.10.0",
    "typescript": "^3.6.2"
  }
}
